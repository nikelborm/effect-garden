{
  "extends": "@nikelborm/tsconfig",
  "compilerOptions": {
    "noEmit": true,
    "outDir": "./dist",
    "rootDir": "./",
    "noUncheckedSideEffectImports": false,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "plugins": [
    {
      "name": "next"
    },
    {
      "name": "ts-namespace-import",
      "options": {
        "capitalizedFilesOnly": true,
        "nameTransform": "PascalCase"
      }
    }
    // {
    //   "name": "@effect/language-service",
    //   "diagnostics": true,
    //   "diagnosticSeverity": {
    //     "deterministicKeys": "error"
    //   },
    //   "reportSuggestionsAsWarningsInTsc": true,
    //   "quickinfo": true,
    //   "completions": true,
    //   "multipleEffectCheck": true,
    //   "transform": "@effect/language-service/transform",
    //   "namespaceImportPackages": ["effect", "@effect/*"],
    //   "topLevelNamedReexports": "follow",
    //   "quickinfoMaximumLength": 1000,
    //   "keyPatterns": [
    //     {
    //       "target": "service", // what key type to target between service|error
    //       "pattern": "package-identifier", // the chosen pattern
    //       "skipLeadingPath": [] // other pattern specific configs
    //     }
    //   ],
    //   "importAliases": {
    //     "Array": "EArray",
    //     "String": "EString",
    //     "Function": "EFunction"
    //   }
    // }
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "src/sw.ts"
  ],
  "exclude": [
    ".github",
    ".stryker-tmp",
    ".turbo",
    ".vscode",
    "build",
    "dist-types",
    "dist",
    "gh-page",
    "node_modules",
    "out",
    "reports",
    "tmp",
    "vite.config.ts"
  ]
}
